<div class="account-page">
  <div class="account-page-inner">
    <div class="account-page-header account-page-left">
      <h2>Create Account</h2>
      <h4>新規アカウント作成</h4>
    </div>

    <div class="account-page-right">
      <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <div class="form-text-wrap">
            <label class="form-text">ニックネーム</label>
          </div>
          <%= f.text_field :nickname, class:"input-default", id:"nickname", autofocus: true, placeholder:"例) videoくん", maxlength:"40" %>
        </div>

        <div class="field">
          <div class="form-text-wrap">
            <label class="form-text">メールアドレス</label>
          </div>
          <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可" %>
        </div>

        <div class="field">
          <div class="form-text-wrap">
            <label class="form-text">パスワード</label>
          </div>
          <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字混合" %>
        </div>

        <div class="field">
          <div class="form-text-wrap">
            <label class="form-text">パスワード（確認）</label>
          </div>
          <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力してください" %>
        </div>

        <div class="field">
          <div class="form-text-wrap">
            <label class="form-text">お名前</label>
          </div>
          <%= f.text_field :full_name, class:"input-default", id:"full-name", placeholder:"例) 動画太郎" %>
        </div>

        <div class="field">
          <div class="form-text-wrap">
            <label class="form-text">お名前（カナ）</label>
          </div>
          <%= f.text_field :full_name_kana, class:"input-default", id:"full-name-kana", placeholder:"例) ドウガタロウ" %>
        </div>

        <div class="field">
          <div class="form-text-wrap">
            <label class="form-text">生年月日</label>
          </div>
          <div class="birth-wrap">
            <%= raw sprintf(
              f.date_select(
                :birthday,
                class:"select-birth",
                id:"birth-date",
                use_month_numbers: true,
                prompt:"--",
                start_year: 1930,
                end_year: (Time.now.year - 5),
                date_separator: "%s"),
              "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
          </div>
        </div>

        <div class="actions">
          <%= f.submit "Create Account", class: "btn" %>
        </div>
      <% end %>

    </div>
  </div>
</div>