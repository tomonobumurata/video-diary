<div class="account-page">
  <div class="account-page-inner">
    <div class="account-page-header account-page-left">
      <h2>Log in</h2>
      <h4>登録済みのアカウントでログイン</h4>
    </div>

    <div class="account-page-right">
      <%= form_with model: @user, url: user_session_path, local: true do |f| %>
        <div class="field">
          <div class="form-text-wrap">
            <label>メールアドレス</label>
          </div>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-default", placeholder: "PC・携帯どちらでも可" %>
        </div>

        <div class="field">
          <div class="form-text-wrap">
            <label>パスワード</label>
          </div>
          <%= f.password_field :password, autocomplete: "current-password", class: "input-default", placeholder: "6文字以上の半角英数字混合" %>
        </div>

        <div class="actions">
          <%= f.submit "Log in", class: "btn" %>
        </div>
      <% end %>

    </div>
  </div>
</div>